<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.naufalp2000.indonesia">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".detail.MusiumDetail"
            android:screenOrientation="portrait" />
        <activity
            android:name=".detail.BatikDetail"
            android:screenOrientation="portrait" />
        <activity
            android:name=".detail.CovidDetail"
            android:screenOrientation="portrait" />
        <activity
            android:name=".menu.CovidActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".menu.BatikActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".menu.ProvinceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".menu.MusiumActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>